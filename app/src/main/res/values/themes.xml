<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkellyProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_pokedex</item>
        <item name="colorPrimaryDark">@color/red_dark_pokedex</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_pokedex</item>
        <item name="colorSecondaryVariant">@color/red_pokedex</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorAccent">?colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="colorSurface">@color/grey_surface_color</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>